<h1 class="my-4 text-center">Tasks List</h1>

<ul class="list-group mb-4">
  <% @tasks.each do |task| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to task.name, task_path(task.id), class: "text-decoration-none" %>
      <div>
        <%= link_to "Edit", edit_task_path(task.id), class: "btn btn-warning btn-sm me-2" %>
        <%= link_to "Delete", task_path(task.id),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "btn btn-danger btn-sm" %>
      </div>
    </li>
  <% end %>
</ul>

<div class="text-center">
  <%= link_to "Add a task", new_task_path, class: "btn btn-primary" %>
</div>
